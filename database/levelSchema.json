{
    "app_names": [
        "nostr_NIP05_server"
    ],
    "tags": "nostr",
    "authors": [
        "dentropy@ddaemon.org"
    ],
    "dependencies": [
        {
            "name": "RBAC.root_RBAC"
        },
        {
            "name": "apps.nostr_NIP05_relay_map"
        }
    ],
    "schema_variables": {
        "NOSTR_PUBLIC_KEY": {
            "Description": "Just take the npub off the nostr public key"
        },
        "LOG_AUTO_INCREMENT": {
            "Description": "Increments with the log going up"
        }
    },
    "schema": {
        "nostr_json": {
            "key_value_patterns": [
                "nostr_${DNS_NAME}"
            ]
        ,
        "upsert_json_schema" : {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
              "variables": {
                "type": "object",
                "properties": {
                  "DNS_NAME": {
                    "type": "string"
                  }
                },
                "required": [
                  "DNS_NAME"
                ]
              },
              "value": {
                "type": "object",
                "properties": {
                  "names" : {
                    "type" : "object"
                  },
                  "relays": {
                    "type": "object"
                  }
                },
                "required": [
                  "relays",
                  "names"
                ]
              }
            },
            "required": [
              "variables",
              "value"
            ]
          }
    }}
}