                "title": "Generated schema for Root",
                "type": "object",
                "properties": {
                    "value": {
                        "type": "number"
                    }
                },
                "required": [
                    "value"
                ]
            }
        },
        "token_state": {
            "index_type": "caching",
            "key_value_patterns": [
                "token_id_%${TOKEN_ID}%"
            ],
            "upsert_json_schema": {
                "$schema": "http://json-schema.org/draft-07/schema#",
                "title": "Generated schema for Root",
                "type": "object",
                "properties": {
                  "variables": {
                    "type": "object",
                    "properties": {
                      "TOKEN_ID": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "TOKEN_ID"
                    ]
                  },
                  "value": {
                    "type": "object",
                    "properties": {
                      "token_ID": {
                        "type": "string"
                      },
                      "token_transaction_count": {
                        "type": "number"
                      },
                      "last_transaction_timestamp_ms": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "token_ID",
                      "token_transaction_count",
                      "last_transaction_timestamp_ms"
                    ]
                  }
                },
                "required": [
                  "variables",
                  "value"
                ]
              }
        }
    },
